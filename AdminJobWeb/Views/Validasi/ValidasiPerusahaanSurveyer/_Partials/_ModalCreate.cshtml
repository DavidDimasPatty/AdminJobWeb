@{
    Layout = null;
}
@model List<AdminJobWeb.Models.Account.surveyers>

<div class="modal-content">
    <form asp-action="AddSurveyer" asp-controller="Validasi" method="post" class="formPop">
        <div class="modal-header">
            <h5 class="modal-title" id="modalLabel">Create New Surveyer</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <input type="hidden" name="link" class="form-control" value="@ViewBag.link" />
        <div class="modal-body">
            <div class="row">
                <div class="col mb-6">
                    <label class="form-label">Nama Perusahaan</label>
                    <input type="text" class="form-control" value="@ViewBag.namaPerusahaan" readonly>
                    <input type="hidden" name="idPerusahaan" class="form-control" value="@ViewBag.idPerusahaan">
                    <input type="hidden" name="id" class="form-control" value="@ViewBag.id">
                </div>
            </div>
            <div class="row">
                <div class="col mb-6">
                    <label  class="form-label">Pilih Surveyer</label>
                   <select class="form-control" name="idSurveyer">
                       @foreach(var item in Model){
                            <option value="@item._id">@item.nama</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Add Surveyer</button>
        </div>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<style>
    .swal2-container {
        z-index: 20000 !important;
    }
</style>
<script>
    $(document).ready(function () {
        $(".formPop").on("submit", function (e) {
            e.preventDefault();
            Swal.fire({
                icon: "question",
                title: "Yakin data sudah lengkap?",
                showCancelButton: true,
                confirmButtonText: "Submit",
            }).then((result) => {
                if (result.isConfirmed) {
                    this.submit();
                }
            });
        });
    });
</script>