@model AdminJobWeb.Models.Account.admin

<div class="modal fade" id="modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form asp-action="SendFormAdmin" asp-controller="User" method="post" class="formPop">
            @Html.AntiForgeryToken()
            <div class="modal-content">
                <div class="modal-header">
                    <input type="hidden" name="link" class="form-control" value="@ViewBag.link" />
                    <h5 class="modal-title" id="modalLabel">Create New Admin</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col mb-6">
                            <label asp-for="email" class="form-label">Email</label>
                            <input type="email" id="email" asp-for="email" class="form-control" placeholder="xxxx&#64;xxx.xx" required>
                        </div>
                    </div><div class="row">
                        <div class="col mb-6">
                            <label asp-for="roleAdmin" class="form-label">Role</label>
                            <select asp-for="roleAdmin" class="form-control" required>
                                <option value="" disabled selected>Select Role</option>
                                <option value="2">Admin</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bx bx-envelope me-1"></i> Send Email
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<style>
    .swal2-container {
        z-index: 20000 !important;
    }
</style>
<script>
    $(document).ready(function () {
        $("#email").on("keypress", function (e) {
            const char = String.fromCharCode(e.which);
            const re = /^[A-Za-z0-9@@._+-]$/;
            if (!re.test(char)) {
                e.preventDefault();
            }
        });

        $(".formPop").on("submit", function (e) {
            e.preventDefault();
            const re2 = /^[A-Za-z0-9._%+-]+@@[A-Za-z0-9.-]+\.[A-Za-z]{2,}$/;
            const val2 = $('#email').val(); 
            if (!re2.test(val2)) {
                e.preventDefault();
                Swal.fire({
                    icon: "error",
                    title: "Gagal Submit",
                    text: "Input email Tidak Valid."
                });
                return false;
            }
            Swal.fire({
                icon: "question",
                title: "Yakin data sudah lengkap?",
                showCancelButton: true,
                confirmButtonText: "Submit",
            }).then((result) => {
                if (result.isConfirmed) {
                    this.submit();
                }
            });
        });
    });
</script>