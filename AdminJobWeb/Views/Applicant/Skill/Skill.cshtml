@model List<AdminJobWeb.Models.Applicant.Skill>
@{
    ViewData["Title"] = "Admin Dashboard - Skill List";
}

<div class="card">
    <div class="card-header d-flex justify-content-between">
        <h5 class="card-title">Skill List</h5>
        <button id="addSkill" class="btn btn-primary btn-sm">
            <i class="bx bx-plus me-1"></i> Add Skill
        </button>
    </div>
    <div class="card-body">
        <div class="table-responsive text-nowrap">
            <table class="table table-hover" id="tableList">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nama</th>
                        <th>Add ID</th>
                        <th>Add Time</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @{
                        var i = 1;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@item.nama</td>
                                <td>@item.addId</td>
                                <td>@item.addTime?.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                <td class="@(item.status=="Active"?"text-success":"text-danger")">@item.status</td>
                                <td>
                                    @if (item.status == "Active")
                                    {
                                        <form asp-action="InactiveSkill" asp-controller="Applicant" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@item._id" />
                                            <button type="submit" class="btn btn-warning btn-sm">
                                                <i class="bx bx-check me-1"></i> Inactive
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <form asp-action="ActivateSkill" asp-controller="Applicant" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@item._id" />
                                            <button type="submit" class="btn btn-success btn-sm">
                                                <i class="bx bx-check me-1"></i> Activate
                                            </button>
                                        </form>
                                    }
                                    <button id="EditSkill" class="btn btn-primary btn-sm EditSkill" data-itemid="@item._id">
                                        <i class="bx bx-plus me-1"></i> Edit
                                    </button>
                                    <form asp-action="DeleteSkill" asp-controller="Applicant" method="post" class="d-inline">
                                        <input type="hidden" name="id" value="@item._id" />
                                        <button type="submit" class="btn btn-danger btn-sm">
                                            <i class="bx bx-check me-1"></i> Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
    </div>
</div>



@section PageScripts {
    <script>
        $(document).ready(function () {
            $('#tableList').DataTable();
            $("#addSkill").on("click", function (e) {
                e.preventDefault();

                var url = "/Applicant/AddSkill";
                $.ajax({
                    url: url,
                    type: "GET",
                    cache: false,
                    success: function (data) {
                        $("#exampleModal .modal-dialog").html(data);
                        $("#exampleModal").modal('show');
                    },
                    error: function (xhr, status, err) {
                        console.error("AJAX error:", status, err);
                        alert("Gagal memuat form. Cek console untuk detail.");
                    }
                });
            });
            $(".EditSkill").on("click", function (e) {
                e.preventDefault();
                var url = "/Applicant/EditSkill";
                $.ajax({
                    url: url,
                    type: "GET",
                    cache: false,
                    data: {
                        id: $(this).attr("data-itemid")
                    },
                    success: function (data) {
                        $("#exampleModal .modal-dialog").html(data);
                        $("#exampleModal").modal('show');
                    },
                    error: function (xhr, status, err) {
                        console.error("AJAX error:", status, err);
                        alert("Gagal memuat form. Cek console untuk detail.");
                    }
                });
            });
        });
    </script>
}